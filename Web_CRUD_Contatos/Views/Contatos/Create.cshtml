@model Web_CRUD_Contatos.Models.Contato

@{
    ViewData["Adicionar um novo Contato"] = "Create";
}


<h1>Adicionar um novo aluno</h1>
 @if (TempData["MessagemErrorCPF"] != null)
    {
    <div class="alert alert-danger" role="alert">
        <button type= "button" class = "btn btn-danger btn-sm close-alert" arial-label ="Close">x</button>
        @TempData["MessagemErrorCPF"]
    </div>
    }


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome Completo"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control"placeholder="CPF ex: 04568083911" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>            
            <br />
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" type="date" class="form-control"/>                
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Adicionar" class="btn btn-primary" onclick="IsCpf(CPF)"/>                
                <a class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>
        </form> 
    </div>
</div>

<div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
